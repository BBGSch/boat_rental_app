
<div class="row review-section py-3">
    <div class="col-md-8">
      <div class="well well-sm">
            <div class="row" id="post-review-box">
              <h5 id="review-font">Review</h5>
                <div class="col-md-12">
                    <%= simple_form_for [@reservation, @review], wrapper: :horizontal_form do |f|%>


                      <%= f.input :title, placeholder: "title" %>
                      <%= f.input :stars, collection: 1..5 %>
                      <%= f.input :description, as: :text %>
                     <div class="text-right"> <%= f.submit class: "btn btn-sm btn-primary" %></div>

                    <% end %>
                </div>
            </div>
        </div>

    </div>
  </div>


