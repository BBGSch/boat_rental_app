<div>
  <div class="boats_list">
  <%@boats.each do |boat| %>
  <a href=<%=boat_path(boat)%>>
  <div class="card-trip">
    <img src="https://images.unsplash.com/photo-1569263979104-865ab7cd8d13?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1653&q=80" />
