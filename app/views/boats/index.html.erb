      <div>
        <h2><%=boat.description%></h2>
        <p> <%=boat.location%> </p>
      </div>
      <h2 class="card-trip-pricing"><%=boat.price%></h2>
      <a href=<%=user_path(boat.user)%>>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
      </a>
    </div>
  </div>
  </a>
  <%end%>

  </div>
</div>

